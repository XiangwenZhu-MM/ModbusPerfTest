{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*", 
  
  "UseAsyncRead": true,
  "UseAsyncNModbus": true,
  "AllowConcurrentFrameReads": false,
  "DeviceConfigPath": "device-config_10k_200ms.json",

  "ThreadPoolMonitor": {
    "AlertThreshold": 10,
    "IntervalMs": 1000,
    "MinWorkerThreads": 100
  },
  "HeartbeatMonitor": {
    "Enabled": true,
    "IntervalMs": 1000,
    "ThresholdMs": 2000,
    "MaxWarningsInMemory": 50,
    "LogFilePath": "logs/heartbeat-warnings.log",
    "MaxLogFileSizeMB": 10
  },
  "ModbusExceptionLog": {
    "LogFilePath": "logs/modbus-exceptions.log",
    "MaxLogFileSizeMB": 10
  },
  "DataPointStorage": {
    "Backend": "SQLite", // Options: SQLite, InfluxDB
    "InfluxDB": {
      "Url": "http://localhost:8086",
      "Bucket": "modbus",
      "Org": "modbus-org",
