{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*", 
  
  "UseHighPerformanceDriver": true,
  "AllowConcurrentFrameReads": true,

  "ThreadPoolMonitor": {
    "AlertThreshold": 10,
    "IntervalMs": 1000,
    "MinWorkerThreads": 200
  },
  "HeartbeatMonitor": {
    "Enabled": true,
    "IntervalMs": 1000,
    "ThresholdMs": 2000,
    "MaxWarningsInMemory": 50,
    "LogFilePath": "logs/heartbeat-warnings.log",
    "MaxLogFileSizeMB": 10
  }
}
