{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  
  "UseMockModbus": true,
  "MockModbus": {
    "MinLatencyMs": 40,
    "MaxLatencyMs": 500
  },

  "HeartbeatMonitor": {
    "Enabled": true,
    "IntervalMs": 1000,
    "ThresholdMs": 2000,
    "MaxWarningsInMemory": 50,
    "LogFilePath": "logs/heartbeat-warnings.log",
    "MaxLogFileSizeMB": 10
  }
}
